<h1>New Director Form:</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p> <%= error %></p>
  <% end %>
<% end %>

<%= form_for @director do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :awards %>
  <%= f.check_box :awards %>

  <%= f.submit %>

<% end %>
