<h1>🎞Director🎞</h1>

<%= label_tag "name:" %>
<%= @director.name %>
<br>

<%= button_to "Edit", edit_director_path(@director), :method => :get %>
<br>

<%= label_tag "age:" %>
<%= @director.age %>
<br>

<%= label_tag "awards:" %>
<%= @director.awards %>
<br>

<%= button_to "Delete Director", @director, :method => :delete %>

<% @movies.each do |movie| %>
<h4>Movies they've directed:</h4>
<%= link_to movie.name, movie_path(movie) %>
<br>
<% end %>

<%= button_to "All Directors", directors_path(@director), :method => :get %>
